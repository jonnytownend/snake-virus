{
  "name": "snake-code",
  "version": "1.0.0",
  "description": "Snake Virus: a snake-inspired browser game where you corrupt source code in an IDE-style interface.",
  "private": true,
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "src/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "generate:source": "node scripts/generate-source-corpus.mjs",
    "run": "python -m http.server 8000",
    "prestart": "npm run generate:source",
    "start": "python -m http.server 8000",
    "pretest": "npm run generate:source",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage"
  },
  "devDependencies": {
    "jest": "^30.2.0"
  }
}
